<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Messages List -->

        <!-- Predefined Messages for Patient -->

        <ListView
            android:id="@+id/messageListView"
            android:layout_width="match_parent"
            android:layout_height="727dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/message1Button"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:text="I need help" />

            <Button
                android:id="@+id/message2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I'm hungry" />

            <Button
                android:id="@+id/message3Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I'm thirsty" />

            <Button
                android:id="@+id/message4Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency!" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PatientApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_light</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
    </style>

    <style name="Theme.PatientApp" parent="Base.Theme.PatientApp">
        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.PatientApp.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.PatientApp.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.PatientApp.Body1</item>
        <item name="textAppearanceButton">@style/TextAppearance.PatientApp.Button</item>
    </style>

    <!-- Custom text appearances -->
    <style name="TextAppearance.PatientApp.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.PatientApp.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.PatientApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.PatientApp.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom widget styles -->
    <style name="Widget.PatientApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">64dp</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Widget.PatientApp.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>


</resources>